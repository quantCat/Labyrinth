<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.veronika.ball.GameActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/clear_highscores_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="33dp">
        <TextView
            android:id="@+id/quality_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graphics quality"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginTop="14dp"
            android:layout_alignStart="@+id/radio_quality" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_quality"
            android:layout_below="@+id/quality_caption">

            <RadioButton
                android:id="@+id/lower_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low"
                android:buttonTint="@color/colorPrimaryDark" />

            <RadioButton
                android:id="@+id/higher_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High"
                android:buttonTint="@color/colorPrimaryDark" />
        </RadioGroup>


        <Button
            android:id="@+id/clear_savings_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Clear savings"
            android:layout_below="@+id/radio_quality"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

        <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/textViewSpacer1" />

        <Button
            android:id="@+id/clear_highscores_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="Clear highscores"
            android:layout_below="@+id/radio_quality"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:id="@+id/textViewSpacer2" />

        <Button
            android:id="@+id/return_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="RETURN"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>
</RelativeLayout>
